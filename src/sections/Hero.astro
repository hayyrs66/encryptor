---
import Button from "@components/Button.astro";
---

<section class="w-full h-screen pt-24 pb-16 px-5">
  <div class="grid grid-cols-2fr-1fr w-full h-full gap-8">
    <div class="w-full h-full">
      <textarea
        placeholder="Ingrese el texto aqui..."
        class="outline-none w-full h-full outline outline-white/5 rounded-sm resize-none bg-[#0f1726]/50
         backdrop-blur border-none p-5 text-white placeholder:text-slate-400"
      ></textarea>
    </div>
    <div
      class="w-full h-full flex flex-col justify-center items-center bg-[#1f283b]/50 rounded-sm outline outline-white/5  backdrop-blur"
    >
    <img src="/woman.svg" alt="woman" class="aspect-square" width="200">
    <h4 class="text-white text-xl font-semibold text-center text-balance leading-relaxed">Ning√∫n mensaje fue encontrado</h4>
    <p class="text-gray-400 text-sm max-w-[340px] text-center text-balance leading-snug">Ingresa el texto que desees encriptar o desencriptar.</p>
    </div>
  </div>
  <div class="flex gap-4">
    <Button title="Encriptar" bgColor="106b96" />
    <Button title="Desencriptar" bgColor="132941"/>
  </div>
</section>
