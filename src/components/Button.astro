---
interface Props {
  title: string;
  bgColor: string;
}

const { title, bgColor } = Astro.props;

const colorVariants = {
  "106b96":
    "text-white w-fit text-sm font-semibold px-5 py-2 rounded-md mt-5 bg-[#106b96] transition-colors hover:bg-[#38bcf9] cursor-pointer",
  "132941":
    "text-sky-400 text-sm w-fit font-semibold px-5 py-2 rounded-md mt-5 bg-sky-400/10 transition-colors hover:bg-sky-400/20 cursor-pointer",
};
---

<button class=`${colorVariants[bgColor]}`>{title}</button>
